#include "game.h"

void InitBoard(char board[ROW][COL],int row,int col)
{
    int i,j;
    for(i = 0;i < row;i++)
    {
        for(j = 0;j < col;j++)
            board[i][j] = ' ';
    }
}

void DisplayBoard(char board[ROW][COL],int row,int col)
{
    int i,j;
    for(i = 0;i < row;i++)
    {
        for(j = 0;j < col;j++)
        {
            printf(" %c ",board[i][j]);
            if(j < col -1)
                printf("|");
        }
        printf("\n");

        for(j = 0;j < col;j++)
        {
            if(i < row -1)
            {
                printf("...");
                if(j < col -1)
                    printf("|");
            }
        }
        printf("\n");
    }
}

void PlayerMove(char board[ROW][COL],int row,int col)
{
    int x = 0,y = 0;
    printf("玩家:>\n");

    while (1)
    {
        printf("请输入要下的坐标:>");
        scanf("%d%d",&x,&y);
        if(x >= 1 && x <= row && y >= 1 && y <= col)//判断合法性
        {
            if(board[x - 1][y - 1] == ' ')
            {
                board[x - 1][y - 1] = '*';
                break;
            }
            else
                printf("该处已被下过！请更改所下位置\n");
        }
        else
            printf("坐标非法，请重新输入！\n");
    }
}

void ComputerMove(char board[ROW][COL],int row,int col)
{
    int x = 0,y = 0;
    printf("电脑:>\n");

    while(1)
    {
        x = rand() % row;
        y = rand() % col;
        if(board[x][y] == ' ')
        {
            board[x][y] = '#';
            break;
        }
    }

}

